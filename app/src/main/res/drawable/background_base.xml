<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo del shape en blanco -->
    <solid android:color="#FFFFFF" />

    <!-- Bordes con sombras -->
    <corners android:radius="8dp" />
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
    <stroke
        android:width="1dp"
        android:color="#B2FF59" />

    <!-- Degradado en los bordes -->
    <gradient
        android:angle="270"
        android:centerColor="#F4F8F4"
        android:endColor="#66BA66"
        android:startColor="#66BA66" />
</shape>



